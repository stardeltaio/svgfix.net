---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="404 - Page Not Found | SVGFix" description="Page not found">
  <Header />

  <main class="flex-1 container mx-auto px-4 py-16 flex items-center justify-center">
    <div class="text-center max-w-md">
      <h1 class="text-6xl font-bold text-[rgb(var(--color-primary))] mb-4">404</h1>
      <h2 class="text-2xl font-semibold text-[rgb(var(--color-text))] mb-4">Page Not Found</h2>
      <p class="text-[rgb(var(--color-text-secondary))] mb-8">
        The page you're looking for doesn't exist or has been moved.
      </p>
      <a href="/" class="btn btn-primary">Go Home</a>
    </div>
  </main>

  <Footer />
</Layout>
